{#
/**
 * @file
 * Business+s's theme implementation to display a Service node.
 */
#}

{% extends "node.html.twig" %}
{% block content %}
  {{ attach_library('businessplus/node-service') }}
  {% if content.field_mt_srv_image|render or content.field_mt_srv_subheader_body|render or content.field_mt_srv_buy_link|render or content.field_mt_srv_price|render %}
  <div class="service-content-top">
    {% if content.field_mt_srv_image|render %}
      <div class="service-content-top-first">
        {{ content.field_mt_srv_image }}
      </div>
    {% endif %}
    {% if content.field_mt_srv_subheader_body|render or content.field_mt_srv_buy_link|render or content.field_mt_srv_price|render %}
      <div class="service-content-top-second">
        {{ content.field_mt_srv_subheader_body }}
        {{ content.field_mt_srv_price }}
        {{ content.field_mt_srv_buy_link }}
      </div>
    {% endif %}
  </div>
  {% endif %}
  {{ content|without('field_mt_srv_banner_image', 'field_mt_srv_image', 'field_mt_srv_subheader_body', 'field_mt_srv_buy_link', 'field_mt_srv_price') }}
{% endblock %}
